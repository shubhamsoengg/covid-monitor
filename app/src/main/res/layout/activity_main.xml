<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity">

    <!-- Include other widget or layout tags here. These are considered
            "child views" or "children" of the linear layout -->



    <Button
        android:id="@+id/button_symptoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="50dp"
        android:width="300dp"
        android:background="#ddd"
        android:text="RATE YOUR SYMPTOMS"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/video_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Video Area Below:"
        android:textAlignment="center"
        android:textStyle="bold" />
    <TextureView
        android:id="@+id/textureView2"
        android:layout_width="280dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_height="165dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/heart_rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginRight="15dp"
            android:text="Heart Rate: 0"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/breath_rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Respiratory Rate: 0"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    <Button
        android:id="@+id/heart_rate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:width="300dp"
        android:background="#ddd"
        android:text="MEASURE HEART RATE"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/respiratory_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:width="300dp"
        android:layout_marginTop="10dp"
        android:background="#ddd"
        android:text="MEASURE RESPIRATORY RATE"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/upload_signs_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:width="300dp"
        android:text="UPLOAD SIGNS"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"/>

</LinearLayout>
</ScrollView>